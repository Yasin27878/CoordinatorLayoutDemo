<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yasin.coordinatorlayoutdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScrollActivity"
            android:label="@string/title_activity_scroll"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CollapsingActivity"
            android:label="@string/title_activity_collapsing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TitleBehaviorActivity"
            android:label="@string/title_activity_title_behavior"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FooterActivity"
            android:label="@string/title_activity_footer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>